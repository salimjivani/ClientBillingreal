                console.log(adding.row(1).data(["Salim", "Salim Testing", "<button>Edit</button><button id='edit'>Delete</button>"]));
            });
        });


        //Adding new Data
        $('table #edit').click(function () {
            adding.row.add(["Article Title", "Testing", "<button>Edit</button><button id='edit'>Delete</button>"]).draw();
        });


        //Edit Data
        $('#example').on('click', 'tbody tr', function () {
            console.log(adding.row(this).data(["Article Title", "Testing", "<button>Edit</button><button id='edit'>Delete</button>"]));
